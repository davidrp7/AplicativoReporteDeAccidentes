<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".AnimacionActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:foreground="#d8000000"
        android:background="@color/colorPrimaryDark"
        android:focusedByDefault="true"
        android:scaleType="centerInside"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.8" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/sircat_logoid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:lottie_imageAssetsFolder="assets"
        app:lottie_fileName="animation-w233-h275.json"
        app:lottie_loop="true"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true" />

    <TextView
        android:id="@+id/sircat_titlte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_FondoBlanco"
        android:layout_centerHorizontal="true"
        android:text="SIRCAT"
        android:layout_below="@id/sircat_logoid"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed-light"
        android:textSize="35sp"/>
    <TextView
        android:id="@+id/sircat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sircat_titlte"
        android:textColor="@color/color_FondoBlanco"
        android:text="Sistema de Información de Registro y Control de Accidentes de Tránsito"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="sans-serif-condensed-light"
        android:textSize="20sp"/>

</RelativeLayout>